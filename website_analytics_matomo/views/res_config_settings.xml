<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="website_email_marketing" position="after">
                <block title="Matomo Analytics" id="website_matomo_analytics">
                    <setting>
                        <field name="has_matomo_analytics" />
                    </setting>

                    <setting id="matomo_analytics_id"  invisible="not has_matomo_analytics">
                        <field name="matomo_analytics_id" />
                    </setting>

                    <setting id="matomo_analytics_host"  invisible="not has_matomo_analytics">
                        <field name="matomo_analytics_host" placeholder="https://matomo.host.name/"/>
                    </setting>

                    <setting id="matomo_enable_userid"  invisible="not has_matomo_analytics">
                        <field name="matomo_enable_userid" string="Enable User ID"/>
                    </setting>

                    <setting id="matomo_enable_heartbeat"  invisible="not has_matomo_analytics">
                        <field name="matomo_enable_heartbeat" string="Enable Heartbeat"/>
                    </setting>

                    <setting id="" help="Set the Active Time in seconds. Only if the page was viewed for at least this
                                    amount of time (and the user leaves the page or focuses away from the tab)
                                    then a ping request will be sent." invisible="not matomo_enable_heartbeat">
                        <field name="matomo_heartbeat_timer" string="Active Time (seconds)" />
                    </setting>

                </block>
            </block>
        </field>
    </record>
</odoo>
